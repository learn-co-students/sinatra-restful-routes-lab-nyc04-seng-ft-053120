<h1>Edit a recipe!</h1>

<form method="POST" action="/recipes/<%= @recipe.id %>">
  <input type="hidden" name="_method" value="PATCH">
    <label for="recipe[name]">Name: </label>
    <input type="text" id="name" name="recipe[name]" value=<%= @recipe.name %>><br>

    <label for="recipe[ingredients]">Ingredients: </label>
    <input type="number" id="ingredients" name="recipe[ingredients]"value=<%= @recipe.ingredients %>><br>

    <label for="recipe[cook_time]">Cook Time: </label>
    <input type="text" id="cook_time" name="recipe[cook_time]" value=<%= @recipe.cook_time %>><br>
    <br>
    <input type="submit" value="Update Recipe">
</form> 
<h1>Update an recipe</h1>

<form action="/recipes/<%= @recipe.id %>" method="post" >
<input id="hidden" type="hidden" name="_method" value="patch">

  <label for="name">Name: </label>
  <input type="text" id="name" name="recipe[name]" value=<%= @recipe.name %>>
  <br><br>

  <label for="ingredients">ingredients: </label>
  <input type="text" id="ingredients" name="recipe[ingredients]"  value=<%= @recipe.ingredients %>>
  <br><br>

  <label for="cook_time">Cook Time: </label>
  <input type="text" id="cook_time" name="recipe[cook_time]"  value=<%= @recipe.cook_time %>>
  <br><br>

  <input id="submit" type="submit" value="submit">

</form>
